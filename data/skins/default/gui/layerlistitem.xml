<image
    controller="button"
    forward="preview.surface=preview, alpha.cell=cell, blend.cell=cell, preview-holder.margin=preview-padding, layer-name.cell=cell">

  <node flow="row" height="24px">
    <image id="preview-holder" src="%skin/editor.png" width="24px" slice="2 2" padding="1 1 1 1">
      <image id="preview" fit="cover"/>
    </image>
    <input id="layer-name" width="100%" controller="cellpropertymodifier" property="name" key="text"></input>
  </node>

  <node flow="row" height="24px">
    <textbutton id="blend"
                width="50px"
                controller="cellpropertymodifier, cycle"
                property="blendmode"
                forward="labelspan.text=value"
                margin="0 0 0 0"/>
    <range controller="cellpropertymodifier"
           property="alpha"
           label="Transparency:"
           id="alpha"
           percent="true"
           width="50%"/>
  </node>
</image>
